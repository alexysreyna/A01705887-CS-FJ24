          <div class="navbar-item">
              <div class="buttons">
                  <% if (username == '') { %> 
                      <a class="button is-primary">
                          <strong>Registrarse</strong>
                      </a>
                      <a href="/users/login" class="button is-light">
                          Entrar
                      </a>
                  <% } else { %>
                        <span>
                            Hola <strong><%= username %> </strong> 
                        </span>

                        <a href="/users/logout" class="button is-danger ml-6">
                            Salir
                        </a>
                <% } %>
                
              </div>
          </div>
          </div>
      </div>
      </nav>
